package com.revature.Project2.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.revature.Project2.beans.User;
import com.revature.Project2.repository.UserRepo;

@Service
public class UserService {
	
	@Autowired
	UserRepo uRepo;
	
	public User getUser(int uId){
		System.out.println("service -getFc");
		return uRepo.findOne(uId);
	}
	
	
	public List<User> retrieveAllUsers(){
		System.out.println("service - retrieve all");
		return (List<User>) uRepo.findAll();
	}
	
	public User createUser(User us){
		System.out.println("service -createFc");
		uRepo.save(us);
		return us;
	}

}
